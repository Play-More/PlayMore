{% extends 'Back/base.html.twig' %}

{% block body %}
    <div class="w-5/6 h-auto mx-auto px-8 py-16 bg-grey-lighter">
        <div class="flex justify-between items-center">
            <h1 class="text-4xl text-playmore-purple-500 font-bold inline-block">Liste des classifications</h1>
            <a class="btn btn-secondary" href="{{ path('classification_new') }}">Ajouter</a>
        </div>
        <table class="table-auto border-collapse w-full mt-12 rounded bg-white" cellpadding="0" cellspacing="0">
            <thead class="font-bold bg-blue-darker text-white">
                <tr>
                    <td>Id</td>
                    <td>Nom</td>
                    <td>Editer</td>
                    <td>Supprimer</td>
                </tr>
            </thead>
            <tbody>
            {% for classification in classifications %}
                <tr>
                    <td>{{ classification.id }}</td>
                    <td>{{ classification.name }}</td>
                    <td><a href="{{ path('classification_edit', {'slug' : classification.slug}) }}" class="font-bold text-playmore-purple-500">Editer</a></td>
                    <td>{{ include('Back/classification/_delete_form.html.twig') }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
{% endblock %}
