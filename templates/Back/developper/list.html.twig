{% extends 'Back/base.html.twig' %}

{% block body %}
    <div class="w-5/6 h-auto mx-auto px-8 py-16 bg-grey-lighter">
        <div class="flex justify-between items-center">
            <h1 class="text-4xl text-playmore-purple-500 font-bold inline-block">Liste des developpeurs</h1>
            <a class="btn btn-secondary" href="{{ path('developper_new') }}">Ajouter</a>
        </div>
        <table class="table-auto border-collapse w-full mt-12 rounded bg-white" cellpadding="0" cellspacing="0">
            <thead class="font-bold bg-blue-darker text-white">
                <tr>
                    <td>Id</td>
                    <td>Nom</td>
                    <td>Logo</td>
                    <td>Editer</td>
                    <td>Supprimer</td>
                </tr>
            </thead>
            <tbody>
            {% for developper in developpers %}
                <tr>
                    <td>{{ developper.id }}</td>
                    <td>{{ developper.name }}</td>
                    <td><img style="width: 50px; height: 60px;" src="{{ asset('images/developper/' ~ developper.imgName) }}" alt=""></td>
                    <td><a href="{{ path('developper_edit', {'slug' : developper.slug}) }}" class="font-bold text-playmore-purple-500">Editer</a></td>
                    <td>{{ include('Back/developper/_delete_form.html.twig') }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
{% endblock %}
