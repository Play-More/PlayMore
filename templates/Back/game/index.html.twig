{% extends 'Back/base.html.twig' %}

{% block body %}
    <div class="w-5/6 h-auto mx-auto px-8 py-16 bg-grey-lighter">
        <div class="flex justify-between items-center">
            <h1 class="text-4xl text-playmore-purple-500 font-bold inline-block">Liste des jeux</h1>
            <a class="btn btn-secondary" href="{{ path('game_new') }}">Ajouter</a>
        </div>
        <table class="table-auto border-collapse w-full mt-12 rounded bg-white" cellpadding="0" cellspacing="0">
            <thead class="font-bold bg-blue-darker text-white">
            <tr>
                <td>Id</td>
                <td>Titre</td>
                <td>Cover</td>
                <td>DÃ©veloppeur</td>
                <td>Editeur</td>
                <td>Genre</td>
                <td>Date de sortie</td>
                <td>Plateformes</td>
                <td>Classification</td>
                <td>Editer</td>
                <td>Supprimer</td>
            </tr>
            </thead>
            <tbody>
            {% for game in games %}
                <tr>
                    <td>{{ game.id }}</td>
                    <td>{{ game.name }}</td>
                    <td><img style="width: 50px; height: 60px;" src="{{ asset('/images/games/' ~ game.file_name) }}" alt=""></td>
                    <td>{{ game.developper}}</td>
                    <td>{{ game.editor}}</td>
                    <td>{{ game.category }}</td>
                    <td>{{ game.release_date | date("d/m/Y") }}</td>
                    <td>{{ game.platforms }}</td>
                    <td>{{ game.classification }}</td>
                    <td><a href="{{ path('game_edit', {'slug' : game.slug}) }}" class="font-bold text-playmore-purple-500">Editer</a></td>
                    <td>{{ include('Back/game/_delete_form.html.twig') }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}