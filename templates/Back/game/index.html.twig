<!DOCTYPE html>

<title>Game index</title>

{% block body %}
    <h1>Game index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>ImgUrl</th>
                <th>ReleaseDate</th>
                <th>Multiplayer</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for game in games %}
            <tr>
                <td>{{ game.id }}</td>
                <td>{{ game.name }}</td>
                <td>{{ game.imgUrl }}</td>
                <td>{{ game.releaseDate ? game.releaseDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ game.multiplayer ? 'Yes' : 'No' }}</td>
                <td>{{ game.description }}</td>
                <td>
                    <a href="{{ path('game_show', {'id': game.id}) }}">show</a>
                    <a href="{{ path('game_edit', {'id': game.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('game_new') }}">Create new</a>
{% endblock %}
