                <td>Image</td>
                <td>Editer</td>
                <td>Supprimer</td>
            </tr>
            </thead>
            <tbody>
            {% for accessory in accessories %}
                <tr>
                    <td>{{ accessory.id }}</td>
                    <td>{{ accessory.name }}</td>
                    <td>{{ accessory.model }}</td>
                    <td> a faire</td>
                    <td><a href="{{ path('accessory_edit', {'id' : accessory.id}) }}" class="font-bold text-primary">Editer</a></td>
                    <td>{{ include('Back/accessory/_delete_form.html.twig') }}</td>
                </tr>
            {% endfor %}

            </tbody>
        </table>
    </div>
{% endblock %}
