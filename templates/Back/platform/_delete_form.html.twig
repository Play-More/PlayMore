<form method="post" action="{{ path('platform_delete', {'id': platform.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ platform.id) }}">
    <input type="submit" class="text-red-light font-bold bg-transparent cursor-pointer" value="Supprimer">
</form>
