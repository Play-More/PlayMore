{% extends 'Back/base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
<div class="w-5/6 h-auto mx-auto px-8 py-16 bg-grey-lighter">
    <div class="flex justify-between items-center">
        <h1 class="text-4xl text-playmore-purple-500 font-bold inline-block">Liste des Utilisateurs</h1>
    </div>
    <table class="table-auto border-collapse w-full mt-12 rounded bg-white" cellpadding="0" cellspacing="0">
        <thead class="font-bold bg-blue-darker text-white">
            <tr>
                <td>Id</td>
                <td>Nom d'utilisateur</td>
                <td>Email</td>
                <td>Rating</td>
                <td>Coins</td>
                <td>Editer</td>
                <td>Supprimer</td>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.username }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.rating }}</td>
                <td>{{ user.coins }}</td>
                <td><a href="{{ path('user_edit', {'id': user.id}) }}" class="font-bold text-playmore-purple-500">edit</a></td>
                <td>{{ include('Back/user/_delete_form.html.twig') }}</td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
