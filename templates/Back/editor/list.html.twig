{% extends 'Back/base.html.twig' %}

{% block body %}
    <div class="w-5/6 h-auto mx-auto px-8 py-16 bg-grey-lighter">
        <div class="flex justify-between items-center">
            <h1 class="text-4xl text-primary font-bold inline-block">Liste des Ã©diteurs</h1>
            <a class="btn btn-secondary" href="{{ path('editor_new') }}">Ajouter</a>
        </div>
        <table class="table-auto border-collapse w-full mt-12 rounded bg-white" cellpadding="0" cellspacing="0">
            <thead class="font-bold bg-blue-darker text-white">
            <tr>
                <td>Id</td>
                <td>Name</td>
                <td>Logo</td>
                <td>Editer</td>
                <td>Supprimer</td>
            </tr>
            </thead>
            <tbody>
            {% for editor in editors %}
                <tr>
                    <td>{{ editor.id }}</td>
                    <td>{{ editor.name }}</td>
                    <td><img style="width: 50px; height: 60px;" src="{{ asset('images/editor/' ~ editor.imgName) }}" alt=""></td>
                    <td><a href="{{ path('editor_edit', {'slug' : editor.slug}) }}" class="font-bold text-primary">Editer</a></td>
                    <td>{{ include('Back/editor/_delete_form.html.twig') }}</td>
                </tr>
            {% endfor %}

            </tbody>
        </table>
    </div>
{% endblock %}