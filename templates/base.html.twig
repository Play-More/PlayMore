<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <title>{% block title %}PlayMore{% endblock %}</title>
    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
        <link href="https://fonts.googleapis.com/css?family=Nunito:400,600,700" rel="stylesheet">
        <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.3/css/all.css" integrity="sha384-UHRtZLI+pbxtHCWp1t77Bi1L4ZtiqrqD80Kn4Z8NTSRyMA2Fd33n5dQ8lWUE00s/" crossorigin="anonymous">
        <link rel="icon" type="image/x-icon" href="{{ asset('images/playmore.ico') }}" />
    {% endblock %}
</head>
<body>
<header>
    <img src="{{ asset('images/playmoreheader.png') }}" class="logo-size">
   <div>
       <a class="return-button" href="{{ path('user_profile' ,{'slug': app.user.slug}) }}">Profil</a>
       {% if is_granted('ROLE_ADMIN') %}
           <a class="return-button" href="{{ path('game_index') }}">Admin</a>
       {% endif %}
       <a class="return-button" href="{{ path('app_security_logout') }}">Se d√©connecter</a>
   </div>

</header>
{% block content %}
{% endblock %}
{% block javascripts %}
    {{ encore_entry_script_tags('app') }}
{% endblock %}
</body>
</html>
