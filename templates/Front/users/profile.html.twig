{% extends 'Front/base.html.twig' %}

{% block content %}
    <div class="w-full min-h-screen bg-grey-lightest">
        <div class="w-5/6 h-screen m-auto">
            <a href="">Mes jeux</a>
            <ul>
                {% for gamePlatform in user.gamePlatforms %}
                <li><a href="{{ path('user_game_edit', {'gamePlatform' : gamePlatform.id}) }}">{{ gamePlatform.game.name }} - {{ gamePlatform.platform.name }}</a></li>
                {% endfor %}
            </ul>
            <a href="{{ path('user_game_add') }}">Ajouter un jeu</a>
        </div>
    </div>
{% endblock %}