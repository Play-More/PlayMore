{% extends 'Front/base.html.twig' %}

{% block content %}
    <div class="w-1/2 h-auto mx-auto px-8 py-16 bg-grey-lighter">
        <h1 class="text-playmore-purple-500 mb-6">Ajouter un commentaire</h1>
        {{ form_start(form) }}
        <div class="flex-col rounded bg-white shadow-md">
            <div class="flex w-full">
                <div class="w-full p-8">
                    {{ form_row(form.content) }}
                    {{ form_rest(form) }}
                </div>
            </div>
            <div class="bg-grey-lighter flex p-4 rounded-b justify-end">
                <button class="btn btn-edit mr-2">{{ button_label|default('Enregistrer') }}</button>
                <a class="btn btn-secondary" href="{{ path('user_profile', {'slug': user.slug}) }}">Retour</a>
            </div>
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}

