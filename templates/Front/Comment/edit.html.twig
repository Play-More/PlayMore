{% extends 'Front/base.html.twig' %}

{% block content %}
    <div class="w-full min-h-screen bg-grey-lightest">
        <div class="w-1/3 h-auto mx-auto px-8 py-16">
            <h1 class="text-playmore-purple-500 mb-6">Editer un commentaire</h1>
            {{ form_start(form) }}
            <div class="flex-col rounded bg-white shadow-md">
                <div>
                    <div class="flex-col m-6 p-3">
                        <label for="comment_rating" class="label">Votre note</label>
                        <select id="comment_rating" class="mt-3" name="_rating" required="required">
                            <option value=""></option>
                            <option value="1" selected>1 étoile</option>
                            <option value="2">2 étoile</option>
                            <option value="3">3 étoile</option>
                            <option value="4">4 étoile</option>
                            <option value="5">5 étoile</option>
                        </select>
                    </div>
                    <div class="flex-col m-6 p-3">
                        {{ form_row(form.content) }}
                    </div>
                </div>
                <div class="bg-grey-lighter flex p-4 rounded-b justify-end">
                    <button class="btn btn-edit mr-2">{{ button_label|default('Enregistrer') }}</button>
                    <a class="btn btn-secondary" href="{{ path('user_profile',{ 'slug' : user.slug}) }}">Retour</a>
                </div>
            </div>
            {{ form_end(form) }}
        </div>

    </div>
{% endblock %}
