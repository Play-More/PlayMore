<div class="flex justify-between items-center">
    <div class="flex items-center">
        {% if img_name is not null and img_name is not empty %}
            <img class="rounded-full border-playmore-purple-500" src="{{ asset('/images/user/' ~ img_name) }}" alt="" style="width: 45px; height: 45px;">
        {% else %}
            <p class="rounded-full mx-1 bg-grey h-8 w-8 flex justify-center items-center font-bold">
                {{ app.user.username|first }}
            </p>
        {% endif %}
        <div class="flex flex-col ml-3">
            <p class="font-bold text-playmore-purple-500 mb-1">{{ username }}</p>
            {% if city is not null %}
            <p class="text-sm text-playmore-purple-400">{{ city }} ({{ postal_code }})</p>
            {% endif %}
        </div>
    </div>
    {% if distance is defined and distance > 0 %}
        <div class="font-bold text-playmore-blue">~{{ distance|number_format(1, '.') }} km</div>
    {% endif %}
</div>
