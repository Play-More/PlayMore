        <div class="w-full flex flex-wrap justify-around items-start min-h-screen p-12 ">
            {% for advert in adverts %}
                {% if advert.advert_kind_id == 1 %}
                <div style="width: 480px; margin-bottom: 50px">
                {# HEADER #}
                <div style="height: 60px;" class="w-full flex items-center justify-between font-bold text-playmore-blue-darkest bg-playmore-blud-light rounded-t px-4">
                    <p class="text-base">Echange</p>
                    <div class="flex items-center">
                        <i class="fas fa-calendar"></i>
                        <div class="flex flex-col ml-2 text-sm">
                            <p>Du {{ advert.start_date | date('l F') }}</p>
                            <p>Au {{ advert.end_date | date('l F') }}</p>
                        </div>
                    </div>
                </div>
                {# MAIN #}
                <div style="height: 180px;" class="bg-white px-4 flex flex-col">
                    <div class="h-1/2 flex justify-between items-center border-b-2 border-playmore-blue-lightest">
                        <div class="flex">
                            <img style="width: 48px; height: 60px;" src="{{ asset('images/items/' ~  advert.item_owned_img_name  ) }}" alt="">
                            <div class="flex flex-col justify-center ml-3">
                                <p class="font-bold text-black">{{ advert.item_owned_name }}</p>
                                <p class="font-semibold text-grey-dark">XBOX ONE</p>
                            </div>
                        </div>
                        <p class="text-playmore-blue font-semibold">Possède</p>
                    </div>
                    <div class="h-1/2 flex justify-between items-center">
                        <div class="flex">
                            <img style="width: 48px; height: 60px;" src="{{ asset('images/items/' ~ advert.item_wanted_img_name ) }}" alt="">
                            <div class="flex flex-col justify-center ml-3">
                                <p class="font-bold text-black">{{ advert.item_wanted_name }}</p>
                                <p class="font-semibold text-grey-dark">PS4</p>
                            </div>
                        </div>
                        <p class="text-playmore-blue font-semibold">Recherche</p>
                    </div>
                </div>
                {# FOOTER #}
                <div style="height: 60px;" class="flex items-center justify-between px-4 bg-playmore-blue-lightest">
                    <div class="flex items-center justify-between">
                        <img style="height: 40px; width: 40px;" src="" alt="" class="rounded-full bg-grey">
                        <div class="flex flex-col text-xs text-playmore-blue-darkest font-semibold ml-2">
                            <p>{{ advert.username | capitalize }}</p>
                            <p>Pontault-Combault</p>
                        </div>
