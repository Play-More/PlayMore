<form class="absolute" method="post" action="{{ path('offer_delete', {'id': offer.offer_id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ offer.offer_id) }}">
    <button type="submit" class="fas fa-times text-white cursor-pointer"></button>
</form>